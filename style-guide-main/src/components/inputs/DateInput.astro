---
const { label, class: customClass = "", value = '', onChange, placeholder = "Select..", errorMessage = "", error = false } = Astro.props;
---

<div class={`relative mb-4  w-72 flex flex-col ${customClass}`}>
  {label && <label class="block mb-1.5 text-sm font-normal text-neutral-400">{label}</label>}
  <div class="relative">
    <input
      type="date"
      class={`block w-full py-3 px-4 rounded-md border shadow-xs focus:outline-none text-neutral-400
            ${error ? 'border-foundation-red-r300 focus:border-foundation-red-r300' : 'border-neutral-300 focus:border-foundation-blue-b300'}`}
      value={value}
      onInput={onChange}
      placeholder={placeholder}
    />
  </div>
  {error && <p class="text-foundation-red-r300 text-sm mt-2">{errorMessage}</p>}
</div>
