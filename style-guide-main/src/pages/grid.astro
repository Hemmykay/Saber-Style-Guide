---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Grid-spacing-style-guide">
    <div
        class="relative w-full overflow-hidden flex flex-col items-start justify-start text-left text-[0.875rem] text-neutral-500 font-subheading-2x-small"
    >
        <Header />
        <div class="flex flex-col gap-6 py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
          <h1 class="text-black text-[54px] font-bold">Grid & Spacing</h1>
        </div>
        <div class="w-[123.75rem] bg-foundation-grey-weak flex flex-row items-center justify-start py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
          <div class="flex-1 relative tracking-[0.06em] leading-[1.5rem] uppercase font-medium">
            Mobile
          </div>
        </div>
        <div class="flex flex-col gap-6 mt-5 mb-14 py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
          <img src="Mobile.svg" alt="" srcset="">
        </div>
        <div class="w-[123.75rem] bg-foundation-grey-weak flex flex-row items-center justify-start py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
            <div class="flex-1 relative tracking-[0.06em] leading-[1.5rem] uppercase font-medium">
              Tablet
            </div>
          </div>
        <div class="flex flex-col gap-6 mt-5 mb-14 py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
            <img src="Tablet.svg" alt="" srcset="">
        </div>
        <div class="w-[123.75rem] bg-foundation-grey-weak flex flex-row items-center justify-start py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
            <div class="flex-1 relative tracking-[0.06em] leading-[1.5rem] uppercase font-medium">
              Desktop
            </div>
          </div>
        <div class="flex flex-col gap-6 mt-5 mb-14 py-[0.75rem] px-[6.25rem] box-border text-[1rem]">
            <img src="Desktop.svg" alt="" srcset="">
        </div>
    </div>
  </Layout>